# Sylang Project Rules
# This file marks the root of a Sylang project and enables cross-file validation

project_name: "Sylang Language Reference"
version: "1.0.0"
description: "Language reference and examples for Sylang DSL"

# Project structure validation rules
rules:
  - enforce_file_limits: true
  - validate_cross_references: true
  - check_symbol_resolution: true
  - indentation_validation: true

# File extension configuration
extensions:
  product_line: [".ple", ".fml", ".vml", ".vcf"]
  systems_engineering: [".blk", ".fun", ".req", ".tst"]
  systems_analysis: [".fma", ".fmc", ".fta"]
  safety_analysis: [".itm", ".haz", ".rsk", ".sgl"]
