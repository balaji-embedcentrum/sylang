// Test file to demonstrate SIMPLE vs COMPOUND properties with FULL BLOCK HIERARCHY

def requirement TestSimpleProperties
    name "Simple Property Test"
    description "This requirement tests simple properties"
    type "functional"
    safetylevel "ASIL-D"
    status "draft"
    
def requirement TestCompoundProperties  
    name "Compound Property Test"
    description "This requirement tests compound properties"
    implements function PowerControl, BrakeControl
    allocatedto component ECU1, ECU2
    
def requirement TestFullBlockHierarchy
    name "Full Block Hierarchy Test"
    description "Testing allocatedto with all valid block types"
    allocatedto system MainSystem
    allocatedto subsystem PowerSubsystem  
    allocatedto component PowerUnit
    allocatedto subcomponent ControlBoard
    allocatedto module ProcessorModule
    allocatedto submodule MemorySubmodule
    allocatedto unit ComputingUnit
    allocatedto subunit ProcessingSubunit
    allocatedto assembly CircuitAssembly
    allocatedto subassembly ConnectorSubassembly
    allocatedto circuit PowerCircuit
    allocatedto part Resistor001
    
def requirement TestInvalidProperties
    name "Invalid Property Test"  
    badproperty "This should show error"
    implements "This should show compound error - missing secondary keyword"
    implements wrongsecondary SomeFunction
    allocatedto wrongtype SomeComponent 