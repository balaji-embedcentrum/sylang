{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Sylang Functions",
  "scopeName": "source.sylang.functions",
  "patterns": [
    { "include": "#comments" },
    { "include": "#imports" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#safety-levels" },
    { "include": "#partof-values" },
    { "include": "#attributes" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sylang",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.sylang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "imports": {
      "patterns": [
        {
          "match": "\\b(use)\\s+(\\w+)\\s+([A-Za-z0-9_]+(?:\\.[A-Za-z0-9_]+,?\\s*)*)\\b",
          "captures": {
            "1": {
              "name": "keyword.control.import.sylang"
            },
            "2": {
              "name": "storage.type.sylang"
            },
            "3": {
              "name": "entity.name.type.sylang"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sylang",
          "match": "\\b(use|def|functiongroup|function)\\b"
        },
        {
          "name": "keyword.other.sylang",
          "match": "\\b(name|description|owner|tags|enables|partof|feature|allocatedto|category|config)\\b"
        }
      ]
    },
    "safety-levels": {
      "patterns": [
        {
          "name": "constant.language.safety-level.sylang",
          "match": "\\b(ASIL-[ABCD]|QM|[ABCD])\\b"
        },
        {
          "name": "keyword.other.safety.sylang",
          "match": "\\b(safetylevel)\\b"
        }
      ]
    },
    "partof-values": {
      "patterns": [
        {
          "name": "constant.language.partof-value.sylang",
          "match": "\\b(system|subsystem|component|module|unit|assembly|circuit|part)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sylang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sylang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "entity.name.tag.sylang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*[\":])"
        }
      ]
    }
  }
} 