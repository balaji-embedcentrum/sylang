{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Sylang Variant Config",
  "scopeName": "source.sylang.variantconfig",
  "fileTypes": ["vcf"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#imports"
    },
    {
      "include": "#configset-definition"
    },
    {
      "include": "#config-definition"
    },
    {
      "include": "#properties"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#safety-levels"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sylang",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.sylang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "imports": {
      "patterns": [
        {
          "match": "\\b(use)\\s+(variantmodel)\\s+([A-Za-z0-9_]+)\\b",
          "captures": {
            "1": {
              "name": "keyword.control.import.sylang"
            },
            "2": {
              "name": "storage.type.sylang"
            },
            "3": {
              "name": "entity.name.type.sylang"
            }
          }
        }
      ]
    },
    "configset-definition": {
      "patterns": [
        {
          "match": "\\b(def)\\s+(configset)\\s+(\\w+)\\b",
          "captures": {
            "1": {
              "name": "keyword.control.definition.sylang"
            },
            "2": {
              "name": "keyword.control.sylang"
            },
            "3": {
              "name": "entity.name.type.sylang"
            }
          }
        }
      ]
    },
    "config-definition": {
      "patterns": [
        {
          "match": "\\b(def)\\s+(config)\\s+(c_\\w+)\\s+([01])\\b",
          "captures": {
            "1": {
              "name": "keyword.control.definition.sylang"
            },
            "2": {
              "name": "keyword.control.sylang"
            },
            "3": {
              "name": "entity.name.function.sylang"
            },
            "4": {
              "name": "constant.numeric.sylang"
            }
          }
        }
      ]
    },
    "properties": {
      "patterns": [
        {
          "match": "\\b(name|description|owner|tags|source|generated)\\s+\"([^\"]+)\"",
          "captures": {
            "1": {
              "name": "keyword.other.property.sylang"
            },
            "2": {
              "name": "string.quoted.double.sylang"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "match": "\\b(use|def|configset|config|name|description|owner|tags|source|generated)\\b",
          "name": "keyword.control.sylang"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double.sylang",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.sylang"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "match": "\\b[01]\\b",
          "name": "constant.numeric.sylang"
        }
      ]
    },
    "safety-levels": {
      "patterns": [
        {
          "name": "constant.language.safety-level.sylang",
          "match": "\\b(ASIL-[ABCD]|QM|[ABCD])\\b"
        },
        {
          "name": "keyword.other.safety.sylang",
          "match": "\\b(safetylevel)\\b"
        }
      ]
    }
  }
} 