{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Sylang Failure Mode Analysis",
  "scopeName": "source.sylang.failuremodeanalysis",
  "fileTypes": ["fma"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#use-statements" },
    { "include": "#def-failuremode" },
    { "include": "#def-keywords" },
    { "include": "#definition-types" },
    { "include": "#property-names" },
    { "include": "#special-keywords" },
    { "include": "#safety-levels" },
    { "include": "#categories" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#booleans" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sylang",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.sylang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "def-failuremode": {
      "patterns": [
        {
          "match": "\\b(def)\\s+(failuremode)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.control.def.sylang" },
            "2": { "name": "storage.type.definition.sylang" },
            "3": { "name": "entity.name.type.failuremode.sylang" }
          }
        }
      ]
    },
    "def-keywords": {
      "patterns": [
        {
          "match": "\\b(def)\\b",
          "name": "keyword.control.def.sylang"
        }
      ]
    },
    "definition-types": {
      "patterns": [
        {
          "match": "\\b(failuremode)\\b",
          "name": "storage.type.definition.sylang"
        }
      ]
    },
    "use-statements": {
      "patterns": [
        {
          "match": "\\b(use)\\s+(\\w+)\\s+([A-Za-z0-9_.,\\s]+)",
          "captures": {
            "1": { "name": "keyword.control.import.sylang" },
            "2": { "name": "storage.type.import.sylang" },
            "3": { "name": "entity.name.import.sylang" }
          }
        }
      ]
    },
    "property-names": {
      "patterns": [
        {
          "match": "\\b(name|description|in|function|severity|occurrence|detection|rpn|auto|actionpriority|safetylevel|causes|effects|mitigation|config)\\b",
          "name": "variable.other.property.sylang"
        }
      ]
    },
    "special-keywords": {
      "patterns": [
        {
          "match": "\\b(enables)\\s+(feature|function|component|block|requirement)\\b",
          "captures": {
            "1": { "name": "keyword.other.special.sylang" },
            "2": { "name": "storage.type.definition.sylang" }
          }
        },
        {
          "match": "\\b(causes)\\s+(failure|fault|error|degradation)\\b",
          "captures": {
            "1": { "name": "keyword.other.special.sylang" },
            "2": { "name": "storage.type.definition.sylang" }
          }
        },
        {
          "match": "\\b(leads_to)\\s+(hazard|risk|failure|degradation)\\b",
          "captures": {
            "1": { "name": "keyword.other.special.sylang" },
            "2": { "name": "storage.type.definition.sylang" }
          }
        },
        {
          "match": "\\b(detected_by)\\s+(sensor|monitor|diagnostic|test)\\b",
          "captures": {
            "1": { "name": "keyword.other.special.sylang" },
            "2": { "name": "storage.type.definition.sylang" }
          }
        },
        {
          "match": "\\b(partof|allocatedto|dependson|requires|prevented_by)\\b",
          "name": "keyword.other.special.sylang"
        }
      ]
    },
    "safety-levels": {
      "patterns": [
        {
          "match": "\\b(ASIL-[ABCD]|QM|[ABCD])\\b",
          "name": "constant.language.safety.sylang"
        },
        {
          "match": "\\b(safetylevel)\\b",
          "name": "variable.other.safety.sylang"
        }
      ]
    },
    "categories": {
      "patterns": [
        {
          "match": "\\b(common_cause|single_point|latent|multiple_point|safe|detected|undetected)\\b",
          "name": "constant.language.category.sylang"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sylang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sylang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "match": "\\b\\d+(\\.\\d+)?\\b",
          "name": "constant.numeric.sylang"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "match": "\\b(true|false|yes|no|enabled|disabled)\\b",
          "name": "constant.language.boolean.sylang"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "match": "[=:;,\\[\\]{}()]",
          "name": "punctuation.operator.sylang"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
          "name": "entity.name.identifier.sylang"
        }
      ]
    }
  }
} 