{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Sylang Fault Tree Analysis",
  "scopeName": "source.sylang.faulttreeanalysis",
  "fileTypes": ["fta"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#use-statements" },
    { "include": "#def-faulttree" },
    { "include": "#def-keywords" },
    { "include": "#definition-types" },
    { "include": "#property-names" },
    { "include": "#special-keywords" },
    { "include": "#safety-levels" },
    { "include": "#categories" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#booleans" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sylang",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.sylang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "def-faulttree": {
      "patterns": [
        {
          "match": "\\b(def)\\s+(faulttree)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.control.def.sylang" },
            "2": { "name": "storage.type.definition.sylang" },
            "3": { "name": "entity.name.type.faulttree.sylang" }
          }
        }
      ]
    },
    "def-keywords": {
      "patterns": [
        {
          "match": "\\b(def)\\b",
          "name": "keyword.control.def.sylang"
        }
      ]
    },
    "definition-types": {
      "patterns": [
        {
          "match": "\\b(faulttree)\\b",
          "name": "storage.type.definition.sylang"
        }
      ]
    },
    "use-statements": {
      "patterns": [
        {
          "match": "\\b(use)\\s+(\\w+)\\s+([A-Za-z0-9_.,\\s]+)",
          "captures": {
            "1": { "name": "keyword.control.import.sylang" },
            "2": { "name": "storage.type.import.sylang" },
            "3": { "name": "entity.name.import.sylang" }
          }
        }
      ]
    },
    "property-names": {
      "patterns": [
        {
          "match": "\\b(name|description|owner|tags|safetylevel|topevent|gate|event|probability|config)\\b",
          "name": "variable.other.property.sylang"
        }
      ]
    },
    "special-keywords": {
      "patterns": [
        {
          "match": "\\b(enables)\\s+(feature|function|component|block|requirement)\\b",
          "captures": {
            "1": { "name": "keyword.other.special.sylang" },
            "2": { "name": "storage.type.definition.sylang" }
          }
        },
        {
          "match": "\\b(and|or|not)\\s+(gate|event)\\b",
          "captures": {
            "1": { "name": "keyword.other.special.sylang" },
            "2": { "name": "storage.type.definition.sylang" }
          }
        },
        {
          "match": "\\b(inhibit)\\s+(gate|condition)\\b",
          "captures": {
            "1": { "name": "keyword.other.special.sylang" },
            "2": { "name": "storage.type.definition.sylang" }
          }
        },
        {
          "match": "\\b(partof|allocatedto|dependson|requires|priority_and)\\b",
          "name": "keyword.other.special.sylang"
        }
      ]
    },
    "safety-levels": {
      "patterns": [
        {
          "match": "\\b(ASIL-[ABCD]|QM|[ABCD])\\b",
          "name": "constant.language.safety.sylang"
        },
        {
          "match": "\\b(safetylevel)\\b",
          "name": "variable.other.safety.sylang"
        }
      ]
    },
    "categories": {
      "patterns": [
        {
          "match": "\\b(basic_event|intermediate_event|undeveloped_event|external_event|house_event)\\b",
          "name": "constant.language.category.sylang"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sylang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sylang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "match": "\\b\\d+(\\.\\d+)?\\b",
          "name": "constant.numeric.sylang"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "match": "\\b(true|false|yes|no|enabled|disabled)\\b",
          "name": "constant.language.boolean.sylang"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "match": "[=:;,\\[\\]{}()]",
          "name": "punctuation.operator.sylang"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
          "name": "entity.name.identifier.sylang"
        }
      ]
    }
  }
} 