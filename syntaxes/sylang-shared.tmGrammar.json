{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Sylang Shared Patterns",
  "scopeName": "source.sylang.shared",
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sylang",
          "begin": "//",
          "end": "$",
          "foreground": "#6A9955"
        },
        {
          "name": "comment.block.sylang",
          "begin": "/\\*",
          "end": "\\*/",
          "foreground": "#6A9955"
        }
      ]
    },
    "def-keywords": {
      "patterns": [
        {
          "match": "\\b(def)\\b",
          "name": "keyword.control.def.sylang",
          "foreground": "#569CD6"
        }
      ]
    },
    "definition-types": {
      "patterns": [
        {
          "match": "\\b(productline|featureset|feature|functiongroup|function|requirement|test|testcase|hazard|risk|failuremode|control|faulttree|item|safetygoal|block|system|subsystem|component|subcomponent|module|unit|assembly|circuit|part|configset|config)\\b",
          "name": "storage.type.definition.sylang",
          "foreground": "#4EC9B0"
        }
      ]
    },
    "use-statements": {
      "patterns": [
        {
          "match": "\\b(use)\\s+(\\w+)\\s+([A-Za-z0-9_.,\\s]+)",
          "captures": {
            "1": {
              "name": "keyword.control.import.sylang",
              "foreground": "#C586C0"
            },
            "2": {
              "name": "storage.type.import.sylang",
              "foreground": "#4EC9B0"
            },
            "3": {
              "name": "entity.name.import.sylang",
              "foreground": "#9CDCFE"
            }
          }
        }
      ]
    },
    "compound-properties": {
      "patterns": [
        {
          "match": "\\b(implements)\\s+(function|requirement|safetygoal|feature)\\s+([A-Za-z0-9_,\\s]+)",
          "captures": {
            "1": { "name": "keyword.other.compound.primary.sylang", "foreground": "#C586C0" },
            "2": { "name": "keyword.other.compound.secondary.sylang", "foreground": "#4FC1FF" },
            "3": { "name": "entity.name.reference.sylang", "foreground": "#9CDCFE" }
          }
        },
        {
          "match": "\\b(allocatedto)\\s+(system|subsystem|component|subcomponent|module|unit|assembly|circuit|part)\\s+([A-Za-z0-9_,\\s]+)",
          "captures": {
            "1": { "name": "keyword.other.compound.primary.sylang", "foreground": "#C586C0" },
            "2": { "name": "keyword.other.compound.secondary.sylang", "foreground": "#4FC1FF" },
            "3": { "name": "entity.name.reference.sylang", "foreground": "#9CDCFE" }
          }
        },
        {
          "match": "\\b(partof)\\s+(system|subsystem|component|subcomponent|module|unit|assembly|circuit|part|functiongroup|featureset)\\s+([A-Za-z0-9_,\\s]+)",
          "captures": {
            "1": { "name": "keyword.other.compound.primary.sylang", "foreground": "#C586C0" },
            "2": { "name": "keyword.other.compound.secondary.sylang", "foreground": "#4FC1FF" },
            "3": { "name": "entity.name.reference.sylang", "foreground": "#9CDCFE" }
          }
        },
        {
          "match": "\\b(enables)\\s+(feature|function|component|block|requirement)\\s+([A-Za-z0-9_,\\s]+)",
          "captures": {
            "1": { "name": "keyword.other.compound.primary.sylang", "foreground": "#C586C0" },
            "2": { "name": "keyword.other.compound.secondary.sylang", "foreground": "#4FC1FF" },
            "3": { "name": "entity.name.reference.sylang", "foreground": "#9CDCFE" }
          }
        },
        {
          "match": "\\b(verifies|validates)\\s+(requirement|function|feature|component)\\s+([A-Za-z0-9_,\\s]+)",
          "captures": {
            "1": { "name": "keyword.other.compound.primary.sylang", "foreground": "#C586C0" },
            "2": { "name": "keyword.other.compound.secondary.sylang", "foreground": "#4FC1FF" },
            "3": { "name": "entity.name.reference.sylang", "foreground": "#9CDCFE" }
          }
        },
        {
          "match": "\\b(mitigates|controls)\\s+(hazard|risk|failuremode)\\s+([A-Za-z0-9_,\\s]+)",
          "captures": {
            "1": { "name": "keyword.other.compound.primary.sylang", "foreground": "#C586C0" },
            "2": { "name": "keyword.other.compound.secondary.sylang", "foreground": "#4FC1FF" },
            "3": { "name": "entity.name.reference.sylang", "foreground": "#9CDCFE" }
          }
        },
        {
          "match": "\\b(derivedfrom|depends|requires|extends|inherits)\\s+(requirement|function|component|block)\\s+([A-Za-z0-9_,\\s]+)",
          "captures": {
            "1": { "name": "keyword.other.compound.primary.sylang", "foreground": "#C586C0" },
            "2": { "name": "keyword.other.compound.secondary.sylang", "foreground": "#4FC1FF" },
            "3": { "name": "entity.name.reference.sylang", "foreground": "#9CDCFE" }
          }
        }
      ]
    },
    "secondary-keywords": {
      "patterns": [
        {
          "match": "\\b(function|requirement|feature|component|block|system|subsystem|subcomponent|module|unit|assembly|circuit|part|hazard|risk|failuremode|safetygoal|test|testcase)\\b",
          "name": "keyword.other.secondary.sylang",
          "foreground": "#4FC1FF"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
          "name": "entity.name.identifier.sylang",
          "foreground": "#DCDCAA"
        }
      ]
    },
    "property-names": {
      "patterns": [
        {
          "match": "\\b(name|description|owner|tags|safetylevel|config)\\b",
          "name": "variable.other.property.sylang"
        }
      ]
    },
    "special-keywords": {
      "patterns": [
        {
          "match": "\\b(enables)\\s+(feature|function|component|block|requirement)\\b",
          "captures": {
            "1": { "name": "keyword.other.special.sylang" },
            "2": { "name": "constant.language.category.sylang" }
          }
        },
        {
          "match": "\\b(partof)\\s+(system|subsystem|component|module|unit|assembly|circuit|part)\\b",
          "captures": {
            "1": { "name": "keyword.other.special.sylang" },
            "2": { "name": "constant.language.category.sylang" }
          }
        },
        {
          "match": "\\b(allocatedto)\\s+(system|subsystem|component|module|unit|assembly|circuit|part)\\b",
          "captures": {
            "1": { "name": "keyword.other.special.sylang" },
            "2": { "name": "constant.language.category.sylang" }
          }
        },
        {
          "match": "\\b(implements)\\s+(function)\\b",
          "captures": {
            "1": { "name": "keyword.other.special.sylang" },
            "2": { "name": "constant.language.category.sylang" }
          }
        },
        {
          "match": "\\b(requires|includes|excludes|tests|verifies|validates|mitigates|prevents|detects|controls|causes|leads_to|detected_by|prevented_by|assessed_by|mitigated_by|monitored_by|verified_by|traces_to|binds|maps|selects|constrains)\\s+(feature|function|component|block|requirement|test|testcase|procedure|method|hazard|risk|failure|control|fault|error|degradation|anomaly|expert|team|tool|measure|action|sensor|monitor|diagnostic|parameter|element|variant|configuration|option|gate|event|condition)\\b",
          "captures": {
            "1": { "name": "keyword.other.special.sylang" },
            "2": { "name": "constant.language.category.sylang" }
          }
        },
        {
          "match": "\\b(dependson|extends|contains|provides|inherits|calls|invokes|returns|triggers|derives_from|satisfied_by|covers|connects|interfaces|visibility|priority_and)\\b",
          "name": "keyword.other.special.sylang"
        }
      ]
    },
    "safety-levels": {
      "patterns": [
        {
          "match": "\\b(ASIL-[ABCD]|QM|[ABCD])\\b",
          "name": "constant.language.safety.sylang",
          "foreground": "#4FC1FF"
        },
        {
          "match": "\\b(safetylevel)\\b",
          "name": "variable.other.safety.sylang",
          "foreground": "#D19A66"
        }
      ]
    },
    "categories": {
      "patterns": [
        {
          "match": "\\b(system|subsystem|component|module|unit|assembly|circuit|part|software|hardware|mechanical|electrical)\\b",
          "name": "constant.language.category.sylang",
          "foreground": "#B5CEA8"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sylang",
          "begin": "\"",
          "end": "\"",
          "foreground": "#CE9178",
          "patterns": [
            {
              "name": "constant.character.escape.sylang",
              "match": "\\\\.",
              "foreground": "#CE9178"
            }
          ]
        },
        {
          "name": "string.quoted.single.sylang",
          "begin": "'",
          "end": "'",
          "foreground": "#CE9178",
          "patterns": [
            {
              "name": "constant.character.escape.sylang",
              "match": "\\\\.",
              "foreground": "#CE9178"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "match": "\\b\\d+(\\.\\d+)?\\b",
          "name": "constant.numeric.sylang",
          "foreground": "#B5CEA8"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "match": "\\b(true|false|yes|no|enabled|disabled)\\b",
          "name": "constant.language.boolean.sylang",
          "foreground": "#569CD6"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "match": "[=:;,\\[\\]{}()]",
          "name": "punctuation.operator.sylang",
          "foreground": "#D4D4D4"
        }
      ]
    }
  }
} 