{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Sylang Functions",
  "scopeName": "source.sylang.functions",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#safety-levels" },
    { "include": "#partof-values" },
    { "include": "#attributes" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sylang",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.sylang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sylang",
          "match": "\\b(def|functiongroup|function)\\b"
        },
        {
          "name": "keyword.other.sylang",
          "match": "\\b(name|description|owner|tags|enables|partof|asil|feature)\\b"
        }
      ]
    },
    "safety-levels": {
      "patterns": [
        {
          "name": "constant.language.safety-level.sylang",
          "match": "\\b([ABCD]|QM)\\b"
        }
      ]
    },
    "partof-values": {
      "patterns": [
        {
          "name": "constant.language.partof-value.sylang",
          "match": "\\b(system|subsystem|component|module|unit|assembly|circuit|part)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sylang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sylang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "entity.name.tag.sylang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*[\":])"
        }
      ]
    }
  }
} 